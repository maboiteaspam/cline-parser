{
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "eqeqeq": [2, "smart", "allow-null"],
    "new-cap": true,
    "no-caller": true,
    "space-in-parens": [2, "never", { "exceptions": ["()"] }],
    "space-after-keywords": [1, "always", { "allowSingleLine": true }],
    "curly": [2, "all"],
    "strict": false,
    "no-multi-str": true,
    "space-infix-ops": [2, {"before": false, "after": true}],
    "comma-spacing": [2, {"before": false, "after": true}],
    "quotes": [2, "single"],
    "max-len": 80
  }
}
